<%- include('partials/header') -%>

<div class="main h-full bg-gradient-to-tl from-gray-400 to-indigo-900 w-full py-16 px-4 pt-0">
<div class="relative w-full h-full pb-10">
  
  <nav class="f-f-l relative z-10">
      <div class="relative z-10 mx-auto container w-full px-4 xl:px-0 lg:flex justify-between items-center py-11">
          <div>
              <a href="/"><img class="w-1/3" src="/imgs/logodone.png" alt="logo" /></a>
          </div>
          <div class="flex items-center text-white text-base font-medium">
              <a href="/login"><button class="px-6 py-3 bg-indigo-400 hover:bg-indigo-500 text-white text-base font-medium rounded-lg flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700">
                  Login
                  <img class="ml-4" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/large_typography_with_gradient_and_glass_effect_Svg5.svg" alt="arrow" />
              </button></a>
          </div>
      </div>
  </nav>
  <div class="relative xl:px-0 container mx-auto md:flex items-center gap-6">
    
      <div class="text-color w-full md:w-1/3 pt-0 lg:pt-0 xl:pt-0">
          <h1 class="text-4xl md:text-4xl lg:text-6xl w-11/12 lg:w-11/12 xl:w-full xl:text-6xl text-white font-extrabold f-f-l">Quick bucks for your old truck</h1>
          <div class="f-f-r text-base lg:text-base pb-20 sm:pb-0 pt-10 xl:pt-6">
              <h2 class="text-white">Sign up to get a free, no-obligation offer today</h2>
          </div>
          <div class="lg:flex">       
            <button class="hidden md:block hover:opacity-90 text-base w-full xl:text-base xl:w-6/12 mt-4 xl:mt-8 f-f-r py-4  bg-indigo-700 text-white font-bold focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 rounded-lg">Get an instant offer</button>
          </div>
      </div>
      <img class="w-1/3 mr-10 ml-0" src="/imgs/stacky-removebg.png" alt="">
      <div class="bg-white shadow rounded lg:w-1/3  md:w-1/2 w-full p-10 mt-16 ml-45">
        <p tabindex="0" class="focus:outline-none text-2xl font-extrabold leading-6 text-gray-800">Create an account</p>
        <p tabindex="0" class="focus:outline-none text-sm mt-4 font-medium leading-none text-gray-500">Already have an account? <a href="/login"   class="hover:text-gray-500 focus:text-gray-500 focus:outline-none focus:underline hover:underline text-sm font-medium leading-none  text-gray-800 cursor-pointer"> Login here.</a></p>
        <div aria-label="Continue with google" class="focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-gray-700 py-3.5 px-4 rounded-lg border-gray-700 flex items-center w-full"></div>
        <div class="row justify-content-center">
            
          <form  action="/signup" method="POST">
                <% if (locals.messages.errors) { %>
                  <% messages.errors.forEach( el => { %>
                      <div class="alert alert-danger"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
              <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
            <div >
              <label for="userName" class="form-label text-sm font-medium leading-none text-gray-800">Name</label>
              <input type="text" class="form-control bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2" id="userName" name="userName">
            </div>
            <div>
                <label for="exampleInputEmail1" id="email" class="form-label text-sm font-medium leading-none text-gray-800">
                    Email
                </label>
                <input name="email" id="exampleInputEmail1" aria-describedby="emailHelp" aria-labelledby="email" type="email" class="form-control bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"/>
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mt-6  w-full">
                <label for="pass" class="form-label text-sm font-medium leading-none text-gray-800">
                    Password
                </label>
                <input name="password" id="password" type="password" class="form-control bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"/>
                
                <label for="confirmPassword" class="form-label text-sm font-medium leading-none text-gray-800">
                 Confirm Password
              </label>
               <div class="relative flex items-center justify-center">
                <input name="confirmPassword" id="confirmPassword" type="password" class="form-control bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"/>
            
               </div>
            </div>
            <div class="mt-8">
                <a href="/signup"><button role="button" class="focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 text-sm font-semibold leading-none text-white focus:outline-none bg-indigo-700 border rounded hover:bg-indigo-600 py-4 w-full">Create my account</button></a>
            </div>
          </div>
         </form>
         
</div>
      
      
       <a href="/signup"><button class="sm:hidden md:hidden hover:opacity-90 text-base w-full xl:text-base xl:w-6/12 mt-4 xl:mt-8 f-f-r py-4  bg-indigo-700 text-white font-bold focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 rounded-lg">Get an instant offer</button></a>
       
  </div>
  
</div>
</div>


<style>
  .top-100 {
      animation: slideDown 0.5s ease-in-out; 
  }

  @keyframes slideDown {
      0% {
          top: -50%;
      }

      100% {
          top: 0;
      }
  }

  * {
      outline: none !important;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      -webkit-tap-highlight-color: transparent;
  }
</style>

    

<%- include('partials/footer') -%>