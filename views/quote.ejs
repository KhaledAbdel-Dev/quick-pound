<%- include('partials/header') -%>

<div class="h-full bg-gradient-to-tl from-gray-400 to-indigo-900 w-full py-16 pb-60 px-4">
    <nav class="f-f-l relative z-10">
        <div class="pt-3 relative z-10 mx-auto container w-full px-4 xl:px-0 lg:flex justify-between items-center py-11">
            <div>
                <a href="/"><img class="w-1/3" src="/imgs/logodone.png" alt="logo" /></a>
            </div>
            <div class="flex items-center text-white text-base font-medium">
                <a href="/logout"><button class="px-6 py-3 bg-indigo-400 hover:bg-indigo-500 text-white text-base font-medium rounded-lg flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700">
                    Logout
                    <img class="ml-4" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/large_typography_with_gradient_and_glass_effect_Svg5.svg" alt="arrow" />
                </button></a>
            </div>
        </div>
    </nav>
    <div class="flex flex-col items-center justify-center">
      
        <div class="bg-white shadow rounded w-1/2 p-10 mt-16">
            
            <% for (let i = 0; i < quote.length; i++) {%>
     
          <form action="/createInfo/<%= quote[i].id %>?_method=PUT" method="POST" data-multi-step class="multi-step-form">
            <%}%>
             <h1 class="focus:outline-none text-2xl font-extrabold leading-6 text-gray-800" >Great news <%= user.userName%>! </h1>
             
             <h1 class="focus:outline-none text-2xl font-extrabold leading-6 text-gray-800" >We'd love to buy your car for</h1>
             <h2 class="text-4xl md:text-4xl lg:text-6xl w-11/12 lg:w-11/12 xl:w-full xl:text-6xl text-black font-extrabold f-f-l mb-2">$ <%= quote[quote.length - 1].quoteValue %></h2>
             <p class="mb-3">We just need a little more information to finalize your offer.</p>
              <div class="card" data-step>
                <h3 class="step-title">Vehicle Details</h3>
                <!--<h6 class="step-title">Name on Title Will be the Name of the Payee On the Check!</h5>-->
                <div class="form-group">
                  <label for="name">Name As It Appears On Title</label>
                  <input type="text" name="name" placeholder="Full Name">
                  <label for="state">Title State</label>
                  <select name="state">
                      <option value="">Select State</option>
                      <option value="MA">Massachusetts</option>
                      <option value="NY">New York</option>
                      <option value="CT">Connecticut</option>
                      <option value="RI">Rhode Island</option>
                      <option value="ME">Maine</option>
                      <option value="NH">New Hampshire</option>
                      <option value="VT">Vermont</option>
                      <option value="NJ">New Jersey</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="color">Vehicle Color</label>
                  <select name="color">
                      <option value="">Select Vehicle Color</option>
                      <option value="Red">Red</option>
                      <option value="Black">Black</option>
                      <option value="White">White</option>
                      <option value="Grey">Grey</option>
                      <option value="Blue">Blue</option>
                      <option value="Green">Green</option>
                      <option value="Silver">Silver</option>
                      <option value="Yellow">Yellow</option>
                  </select>
                </div>
                <button type="button" class="nextB" data-next>Next</button>
              </div>
              <div class="card" data-step>
                <h3 class="step-title">Where Are We Picking Up From?</h3>
                <div class="form-group">
                  <label for="pickup">Enter the Pickup Address</label>
                  <input type="text" name="pickup" placeholder="Street Address">
                
                  <input type="text" name="pickup" placeholder="City">
                 
                  <input type="text" name="pickup" placeholder="State">
                  <label for="number">Enter a Contact Number</label>
                  <input type="text" name="number" placeholder="(123) 456-7890">
                  <button type="button" data-previous>Previous</button>
                  <button type="submit">Submit</button>
                </div>
                
            </form>
            
  
           
  
        </div>
  
            
    </div>
  </div>
  

<%- include('partials/footer') -%>