<%- include('partials/header') -%>

<div class="h-full bg-gradient-to-tl from-gray-400 to-indigo-900 w-full py-16 pb-60 px-4">
  <a class="mr-0" href="/"><img class=" w-1/4" src="/imgs/logodone.png" alt="logo"></a>


  <div class="2xl:container 2xl:mx-auto lg:px-20 md:py-12 md:px-6 py-9 px-4">
    <div class="grid lg:grid-cols-2 md:grid-cols-2 grid-cols-1 lg:gap-8 gap-6">
        <!-- Safe Shopping Grid Card -->
        <div class="p-6 bg-gray-50 rounded dark:bg-gray-800">
            <img class="dark:hidden" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/highlight-7-svg1.svg" alt="Safe Shopping">
            <img class="hidden dark:block" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/highlight-7-svg1dark.svg" alt="Safe Shopping">
            <p class="text-xl text-gray-800 dark:text-white font-semibold leading-5 mt-6">Pickup Location & Details</p>
            <p class="font-normal text-base leading-6 dark:text-gray-300 text-gray-600 my-4">
              35 Barrett St <br>
              Revere, MA 02151 <br>
              Erica - 911
            </p>
        </div>

        <!-- Personal Shopping Grid Card -->
        <div class="p-6 bg-gray-50 rounded dark:bg-gray-800">
            <img class="dark:hidden" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/highlight-7-svg2.svg" alt="Personal Shopping">
            <img class="hidden dark:block" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/highlight-7-svg2dark.svg" alt="Personal Shopping">
            <p class="text-xl text-gray-800 dark:text-white font-semibold leading-5 mt-6">Pickup Pointers</p>
            <p class="font-normal text-base leading-6 dark:text-gray-300 text-gray-600 my-4"></p>
        </div>

        <!-- Free Shopping Grid Card -->
        <div class="p-6 bg-gray-50 rounded dark:bg-gray-800">
            <img class="dark:hidden" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/highlight-7-svg3.svg" alt="Free Shipping">
            <img class="hidden dark:block" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/highlight-7-svg3dark.svg" alt="Free Shipping">
            <p class="text-xl text-gray-800 dark:text-white font-semibold leading-5 mt-6">Buyer Info</p>
            <p class="font-normal text-base leading-6 dark:text-gray-300 text-gray-600 my-4">
              Johnny's Towing Co Ltd <br>
              781-585-9888 <br>
              968 Broadway <br>
              Saugus, MA 01906
            </p>
            <a class="cursor-pointer text-base dark:text-white leading-4 dark:border-white font-medium text-gray-800 border-b-2 border-gray-800 hover:text-gray-600">Learn More</a>
        </div>
    </div>
</div>

  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  

</div> 
<%- include('partials/footer') -%>